<?php

namespace App\Http\Controllers;

use Illuminate\Http\Request;
use Illuminate\Support\Facades\Auth;
use Illuminate\Validation\ValidationException;
use App\Models\User; // Ensure the User model is imported

class AuthController extends Controller
{
    /**
     * Handle an incoming authentication request (Login).
     * @param Request $request
     * @return \Illuminate\Http\JsonResponse
     * @throws ValidationException
     */
    public function login(Request $request)
    {
        // 1. Validate the incoming request fields
        $request->validate([
            'username' => 'required|string',
            'accessKey' => 'required|string', // This will map to the 'password' field
        ]);

        // 2. Attempt to authenticate the user using the 'username' and 'accessKey' (password)
        $credentials = [
            'username' => $request->username,
            'password' => $request->accessKey,
        ];

        // Auth::attempt checks credentials against the hashed password in the DB
        if (! Auth::attempt($credentials)) {
            // Check if the user exists but the password failed
            $userExists = User::where('username', $request->username)->exists();
            if ($userExists) {
                // If user exists, but password failed, throw specific error
                throw ValidationException::withMessages(['accessKey' => 'Invalid Access Key.']);
            }
            // If user doesn't exist, throw general error
            throw ValidationException::withMessages(['username' => 'Invalid Username or Access Key.']);
        }

        $user = Auth::user();

        // 3. Create a Sanctum token
        // The token name is arbitrary, but required.
        $token = $user->createToken('auth_token')->plainTextToken;

        // 4. Return the user data and the token
        return response()->json([
            'user' => [
                'id' => $user->id,
                'username' => $user->username,
                'name' => $user->name,
            ],
            'token' => $token,
        ]);
    }

    /**
     * Get the authenticated user (Session Check).
     * This endpoint is protected by the 'auth:sanctum' middleware.
     * @param Request $request
     * @return \Illuminate\Http\JsonResponse
     */
    public function checkSession(Request $request)
    {
        // The middleware ensures $request->user() is available.
        $user = $request->user();

        return response()->json([
            'id' => $user->id,
            'username' => $user->username,
            'name' => $user->name,
        ]);
    }

    /**
     * Log the user out (Logout).
     * @param Request $request
     * @return \Illuminate\Http\JsonResponse
     */
    public function logout(Request $request)
    {
        // Delete the current token being used for the request
        $request->user()->currentAccessToken()->delete();

        return response()->json(['message' => 'Logged out successfully']);
    }
}